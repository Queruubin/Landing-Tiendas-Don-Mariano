---
import Market from "../components/Icons/Market.astro";
import Shield from "../components/Icons/Shield.astro";
import Truck from "../components/Icons/Truck.astro";
import WhatsApp from "../components/Icons/WhatsApp.astro";
const features = [
  {
    icon: Shield,
    title: "Enviamos lo que pides",
    description:
      "Si pidió un producto maduro, no le llega verde. Así de sencillo.",
    color: "bg-brown-600",
  },
  {
    icon: Market,
    title: "Producto con garantía",
    description: "Lo que no llegó como querías lo cambiamos sin procesos.",
    color: "bg-green-500",
  },
  {
    icon: WhatsApp,
    title: "Entrega Rápida",
    description: "Pide por Whatsapp, llega rapidito",
    color: "bg-gold-500",
  },
  {
    icon: Truck,
    title: "Cerca de ti",
    description: "5 ubicaciones en Bogotá.",
    color: "bg-gold-500",
  },
];
---

<section class="py-16 px-4 md:px-6 bg-gradient-to-r bg-[#FBF8EF]">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">
        ¿Por qué elegir Don Mariano?
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Más de 15 años llevando la mejor calidad a los hogares colombianos
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-x-1 gap-y-8">
      {
        features.map((feature) => (
          <div>
            <div class="p-8 text-center">
              <div
                class={`w-16 h-16 rounded-full bg-[#F8EED8] flex items-center justify-center mx-auto mb-6`}
              >
                <feature.icon class="w-8 h-8 text-[#CF9004] fill-current" />
              </div>
              <h4 class="text-xl font-bold text-gray-900 mb-4">
                {feature.title}
              </h4>
              <p class="text-gray-600 leading-relaxed">{feature.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
