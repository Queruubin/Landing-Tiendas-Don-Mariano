---
import Image from "astro/components/Image.astro";
import Location from "../components/Icons/Location.astro";
import Phone from "../components/Icons/Phone.astro";
import WhatsApp from "../components/Icons/WhatsApp.astro";
import teamDonMariano from "../assets/team-don-mariano.jpeg";

const locations = [
  {
    name: "Calle 140 - Belmiro",
    code: "601631894",
    phone: "3138685861",
    color: "bg-green-500 hover:bg-green-600",
    textColor: "text-white",
  },
  {
    name: "Calle 151 - Cedritos",
    code: "6013004697",
    phone: "3143993912",
    color: "bg-gold-500 hover:bg-amber-500",
    textColor: "text-amber-900",
  },
  {
    name: "CRA 7 CON 45 - JAVERIANA",
    code: "601631894",
    phone: "3108005068",
    color: "bg-stone-200 hover:bg-stone-300",
    textColor: "text-stone-800",
  },
  {
    name: "Salitre",
    code: "601631896",
    phone: "3217869027",
    color: "bg-brown-600 hover:bg-brown-700",
    textColor: "text-white",
  },
];
---

<section class="w-full bg-gradient-to-br from-gold-100 to-brown-100 py-16 px-4">
  <div class="container mx-auto max-w-7xl">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      {/* Image Section */}
      <div class="relative">
        <div class="relative overflow-hidden rounded-2xl shadow-2xl">
          <Image
            src={teamDonMariano}
            alt="Fresh fruits and vegetables at local market"
            width={600}
            height={400}
            class="w-full h-[400px] object-cover"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"
          >
          </div>
        </div>
      </div>

      {/* Content Section */}
      <div class="space-y-8">
        <div class="space-y-4">
          <h2
            class="text-4xl lg:text-4xl font-bold text-gray-800 leading-tight"
          >
            Pide domicilio en el <span class="text-green-500"
              >punto más cercano</span
            >
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed">
            Productos frescos y de calidad directo a tu hogar. Selecciona tu
            ubicación más conveniente.
          </p>
        </div>

        {/* Location Cards */}
        <div class="grid sm:grid-cols-2 gap-4">
          {
            locations.map((location, index) => (
              <div class="rounded-lg overflow-hidden border-0 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                <div
                  class={`p-0 h-full ${location.color} ${location.textColor}`}
                >
                  <section
                    class={`w-full h-full p-6 ${location.textColor} hover:bg-transparent text-left`}
                  >
                    <div class="space-y-2 w-full h-full flex flex-col justify-between py-1 px-2">
                      <div class="flex items-center gap-2">
                        <Location class="h-4 w-4" />
                        <span class="font-semibold text-sm">
                          {location.name}
                        </span>
                      </div>
                      <div class="flex items-center gap-2">
                        <Phone class="size-5 fill-current stroke-current stroke-1 text-yellow-500" />
                        <div class="space-y-1">
                          <div class="font-bold">{location.phone}</div>
                        </div>
                      </div>
                      <a
                        href={`https://wa.me/${location.phone}?text=Hola,%20quiero%20hacer%20un%20pedido%20en%20la%20tienda%20Don%20Mariano%20ubicada%20en%20${location.name}.`}
                        class="
                        flex items-center gap-2 justify-center
                        bg-gold-400 rounded-2xl text-center
                        px-4 py-2 mt-4 text-sm font-semibold
                        text-black
                        hover:bg-gold-600 
                        transition-colors duration-300"
                      >
                        <WhatsApp class="size-4 text-black fill-current" />
                        WhatsApp
                      </a>
                    </div>
                  </section>
                </div>
              </div>
            ))
          }
        </div>

        {/* Additional CTA */}
      </div>
    </div>
  </div>
</section>
