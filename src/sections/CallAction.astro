---
import Location from "../components/Icons/Location.astro";
import Phone from "../components/Icons/Phone.astro";

const locations = [
  {
    name: "Calle 140 - Belmiro",
    code: "601631894",
    phone: "3138685861",
    color: "bg-green-500 hover:bg-green-600",
    textColor: "text-white",
  },
  {
    name: "Calle 151 - Cedritos",
    code: "6013004697",
    phone: "3143993912",
    color: "bg-gold-500 hover:bg-amber-500",
    textColor: "text-amber-900",
  },
  {
    name: "CRA 7 CON 45 - JAVERIANA",
    code: "601631894",
    phone: "3108005068",
    color: "bg-stone-200 hover:bg-stone-300",
    textColor: "text-stone-800",
  },
  {
    name: "Salitre",
    code: "601631896",
    phone: "3217869027",
    color: "bg-brown-600 hover:bg-brown-500",
    textColor: "text-white",
  },
];
---

<section class="w-full bg-gradient-to-br from-gold-100 to-brown-100 py-16 px-4">
  <div class="container mx-auto max-w-7xl">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      {/* Image Section */}
      <div class="relative">
        <div class="relative overflow-hidden rounded-2xl shadow-2xl">
          <img
            src="/Foto_Super.jpg"
            alt="Fresh fruits and vegetables at local market"
            width={600}
            height={400}
            class="w-full h-[400px] object-cover"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"
          >
          </div>
        </div>
        {/* Floating badge */}
        <div
          class="absolute -bottom-6 -right-3 md:-right-6 bg-white rounded-full p-4 shadow-lg"
        >
          <div class="text-center">
            <div class="text-2xl font-bold text-green-600">100%</div>
            <div class="text-xs text-gray-600">Fresco</div>
          </div>
        </div>
      </div>

      {/* Content Section */}
      <div class="space-y-8">
        <div class="space-y-4">
          <h2
            class="text-4xl lg:text-5xl font-bold text-gray-800 leading-tight"
          >
            Pide domicilio en tu <span class="text-green-500"
              >punto más cercano</span
            >
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed">
            Productos frescos y de calidad directo a tu hogar. Selecciona tu
            ubicación más conveniente.
          </p>
        </div>

        {/* Location Cards */}
        <div class="grid sm:grid-cols-2 gap-4">
          {
            locations.map((location, index) => (
              <div class="overflow-hidden border-0 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                <div class={`p-0 ${location.color} ${location.textColor}`}>
                  <button
                    class={`w-full h-full p-6 ${location.textColor} hover:bg-transparent justify-start text-left`}
                  >
                    <div class="space-y-2 w-full">
                      <div class="flex items-center gap-2">
                        <Location class="h-4 w-4" />
                        <span class="font-semibold text-sm">
                          {location.name}
                        </span>
                      </div>
                      <div class="flex items-center gap-2">
                        <Phone class="size-5" />
                        <div class="space-y-1">
                          <div class="text-sm opacity-90 font-bold">
                            {location.code}
                          </div>
                          <div class="font-bold">{location.phone}</div>
                        </div>
                      </div>
                    </div>
                  </button>
                </div>
              </div>
            ))
          }
        </div>

        {/* Additional CTA */}
      </div>
    </div>
  </div>
</section>
