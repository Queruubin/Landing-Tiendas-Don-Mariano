---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Tiendas Don Mariano - Supermercado de barrio en Bogotá. Frutas, verduras frescas, productos de calidad y domicilios rápidos. 5 sedes: Cedritos, Belmira, Javeriana, Salitre y Milenta. ¡Pide por WhatsApp!",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = new URL("/og-image.png", Astro.site);
---

<!doctype html>
<html lang="es-CO">
  <head>
    <!-- Meta Tags Básicos -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="supermercado bogotá, frutas frescas, verduras, domicilios, Don Mariano, fruver, mercado de barrio, Cedritos, Belmira, Javeriana, Salitre, Milenta, calidad, productos frescos, supermercado domicilios bogotá, tienda de barrio bogotá, fruver bogotá"
    />
    <meta name="author" content="Tiendas Don Mariano" />
    <meta
      name="robots"
      content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
    />
    <link rel="canonical" href={canonicalURL} />

    <!-- SEO Local / Geográfico -->
    <meta name="geo.region" content="CO-DC" />
    <meta name="geo.placename" content="Bogotá" />
    <meta name="geo.position" content="4.7110;-74.0721" />
    <meta name="ICBM" content="4.7110, -74.0721" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#fff0de" />
    <meta name="msapplication-TileColor" content="#fff0de" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/LogoDon.png" />
    <link rel="apple-touch-icon" href="/LogoDon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Tiendas Don Mariano" />
    <meta property="og:locale" content="es_CO" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Title -->
    <title>{title}</title>

    <!-- Preconnect para rendimiento -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Schema.org GroceryStore JSON-LD -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "GroceryStore",
        name: "Tiendas Don Mariano",
        image: ogImage.toString(),
        description:
          "Supermercado de barrio en Bogotá con las mejores frutas y verduras frescas. Atención personalizada, productos de calidad y domicilios rápidos por WhatsApp. 5 sedes en Bogotá.",
        address: {
          "@type": "PostalAddress",
          streetAddress: "Av. Caracas #140-25",
          addressLocality: "Bogotá",
          addressRegion: "Cundinamarca",
          addressCountry: "CO",
        },
        geo: {
          "@type": "GeoCoordinates",
          latitude: "4.7110",
          longitude: "-74.0721",
        },
        url: canonicalURL.toString(),
        telephone: "+573138485561",
        priceRange: "$$",
        openingHoursSpecification: [
          {
            "@type": "OpeningHoursSpecification",
            dayOfWeek: [
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday",
              "Saturday",
              "Sunday",
            ],
            opens: "06:00",
            closes: "22:00",
          },
        ],
        aggregateRating: {
          "@type": "AggregateRating",
          ratingValue: "4.9",
          reviewCount: "500",
          bestRating: "5",
          worstRating: "1",
        },
        hasOfferCatalog: {
          "@type": "OfferCatalog",
          name: "Productos disponibles",
          itemListElement: [
            {
              "@type": "Offer",
              itemOffered: { "@type": "Product", name: "Frutas frescas" },
            },
            {
              "@type": "Offer",
              itemOffered: { "@type": "Product", name: "Verduras frescas" },
            },
            {
              "@type": "Offer",
              itemOffered: { "@type": "Product", name: "Abarrotes" },
            },
            {
              "@type": "Offer",
              itemOffered: { "@type": "Product", name: "Lácteos" },
            },
          ],
        },
        numberOfEmployees: { "@type": "QuantitativeValue", value: "30" },
        foundingDate: "2010",
        areaServed: {
          "@type": "City",
          name: "Bogotá",
        },
        paymentAccepted: "Cash, Credit Card, Debit Card, Nequi, Daviplata",
        currenciesAccepted: "COP",
      })}
    />
  </head>

  <body>
    <slot />
  </body>
</html>
