      {/* Contacto */}
      <div>
        <h4 class="text-lg font-semibold mb-6 text-green-400">Contacto</h4>
        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <Truck
              class="w-5 h-5 text-green-500 mt-1 flex-shrink-0 fill-current"
            />
            <div>
              <p class="text-gray-300">Av. Caracas #140-25</p>
              <p class="text-gray-300">Bogotá, Colombia</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <Phone class="w-5 h-5 text-green-500 fill-current" />
            <span class="text-gray-300">+57 313 848 5561</span>
          </div>
          <div class="flex items-center gap-3">
            <span class="text-green-400">@</span>
